<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bgBlue"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/etDisplay"
        android:layout_width="429dp"
        android:layout_height="175dp"
        android:layout_weight="1"
        android:background="@color/greyDisp"
        android:ems="10"
        android:inputType="text"
        android:text="0"
        android:textAlignment="textEnd"
        android:textColor="@color/white"
        android:textSize="48sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TableLayout
        android:id="@+id/tableLayout2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etDisplay">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/btAc"
                android:layout_width="30pt"
                android:layout_height="40pt"
                android:layout_weight="25"
                android:background="@color/greyBt"
                android:text="AC"
                android:textSize="34sp" />

            <Button
                android:id="@+id/btPlusMinus"
                android:layout_width="30pt"
                android:layout_height="40pt"
                android:layout_weight="25"
                android:background="@color/greyBt"
                android:text="+/-"
                android:textSize="34sp" />

            <Button
                android:id="@+id/btPercent"
                android:layout_width="30pt"
                android:layout_height="40pt"
                android:layout_weight="25"
                android:background="@color/greyBt"
                android:text="%"
                android:textSize="34sp" />

            <Button
                android:id="@+id/btDivision"
                android:layout_width="30pt"
                android:layout_height="40pt"
                android:layout_weight="25"
                android:background="@color/yellowBt"
                android:text="รท"
                android:textSize="34sp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/bt7"
                android:layout_width="30pt"
                android:layout_height="40pt"
                android:layout_weight="25"
                android:background="@color/greyBt"
                android:text="7"
                android:textSize="34sp" />

            <Button
                android:id="@+id/bt8"
                android:layout_width="30pt"
                android:layout_height="40pt"
                android:layout_weight="25"
                android:background="@color/greyBt"
                android:text="8"
                android:textSize="34sp" />

            <Button
                android:id="@+id/bt9"
                android:layout_width="30pt"
                android:layout_height="40pt"
                android:layout_weight="25"
                android:background="@color/greyBt"
                android:text="9"
                android:textSize="34sp" />

            <Button
                android:id="@+id/btMultiply"
                android:layout_width="30pt"
                android:layout_height="40pt"
                android:layout_weight="25"
                android:background="@color/yellowBt"
                android:text="x"
                android:textAllCaps="false"
                android:textSize="34sp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/bt4"
                android:layout_width="30pt"
                android:layout_height="40pt"
                android:layout_weight="25"
                android:background="@color/greyBt"
                android:text="4"
                android:textSize="34sp" />

            <Button
                android:id="@+id/bt5"
                android:layout_width="30pt"
                android:layout_height="40pt"
                android:layout_weight="25"
                android:background="@color/greyBt"
                android:text="5"
                android:textSize="34sp" />

            <Button
                android:id="@+id/bt6"
                android:layout_width="wrap_content"
                android:layout_height="40pt"
                android:layout_weight="25"
                android:background="@color/greyBt"
                android:text="6"
                android:textSize="34sp" />

            <Button
                android:id="@+id/btMinus"
                android:layout_width="30pt"
                android:layout_height="40pt"
                android:layout_weight="25"
                android:background="@color/yellowBt"
                android:text="-"
                android:textSize="34sp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/bt1"
                android:layout_width="30pt"
                android:layout_height="40pt"
                android:layout_weight="1"
                android:background="@color/greyBt"
                android:text="1"
                android:textSize="34sp" />

            <Button
                android:id="@+id/bt2"
                android:layout_width="30pt"
                android:layout_height="40pt"
                android:layout_weight="1"
                android:background="@color/greyBt"
                android:text="2"
                android:textSize="34sp" />

            <Button
                android:id="@+id/bt3"
                android:layout_width="30pt"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/greyBt"
                android:text="3"
                android:textSize="34sp" />

            <Button
                android:id="@+id/btPlus"
                android:layout_width="30pt"
                android:layout_height="40pt"
                android:layout_weight="1"
                android:background="@color/yellowBt"
                android:text="+"
                android:textSize="34sp" />
        </TableRow>
    </TableLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="1dp"
        android:layout_weight="1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tableLayout2">

        <Button
            android:id="@+id/bt0"
            android:layout_width="30pt"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/greyBt"
            android:text="0"
            android:textSize="34sp" />

        <Button
            android:id="@+id/btDot"
            android:layout_width="30pt"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/greyBt"
            android:text="."
            android:textSize="34sp" />

        <Button
            android:id="@+id/btEqual"
            android:layout_width="50pt"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/yellowBt"
            android:text="="
            android:textSize="34sp" />
    </LinearLayout>

</android.support.constraint.ConstraintLayout>